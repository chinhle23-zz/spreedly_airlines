<div class="center jumbotron">
  
  <h1>Welcome to Spreedly Airlines</h1>
  <%= link_to image_tag("logo_b.png", alt: "Spreedly logo"), root_path, class: "header-logo" %>

  <h2>Available Flights (click on price to proceed)</h2>
  
  <ul id="flights">
    <% @flights.each do |flight| %>
      <li>
        Origin Airport: <%= flight.origin %> | 
        Destination Airport: <%= flight.destination %> | 
        Price: $<%= link_to flight.price, flight_path(flight) %>
      </li>
    <% end %>
  </ul>

</div>
